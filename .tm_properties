#####
# ~/.tm_properties -- global properties for textmate
#
#   @author     Pat Gaffney <pat@hypepat.com>
#   @created    2016-09-15
#   @modified   2016-09-30
#
#   TextMate searchs from the current directory up to / looking for 
#	.tm_properties. Thus, the global .tm_properties file is at $HOME.
#	This file contains basic standards that can be overridden in the
#	actual project directory if needed.
#
#####################################################################

#####################################################################
# App Settings
#####################################################################

# theme    = "Oceanic Next"
theme      = "21A3A5F5-E82F-48A8-BC8B-9AEF307F6131"
fontName   = "Fira Mono Medium"
fontSize   = 15
encoding   = "UTF-8"
saveOnBlur = true

#####################################################################
# Files
#####################################################################

exclude = "{*.{o,pyc},.DS_Store,.hushlogin}"
include = "{*,.gitignore,.swift*,.bash*,.tm_properties,.inputrc,.profile,.nanorc,.gitconfig}"
binary  = "{*.{ai,bz2,flv,gif,gz,icns,ico,jpg,jpeg,m4v,nib,o,pdf,png,psd,pyc,rtf,scssc,swf,tar,tbz,tgz,tif,tiff,zip},Icon}"

#####################################################################
# Directories
#####################################################################

excludeDirectories = "{.git,node_modules}"

#####################################################################
# Variables
#####################################################################

TM_ORGANIZATION_NAME 		= "hypepat"
TM_JAVASCRIPT_ESLINT_ESLINT = "/usr/local/bin/eslint"
TM_GIT						= "/usr/local/bin/git"

#####################################################################
# Javascript
#####################################################################

[ source.js ]
softTabs = true
tabSize  = 2

#####################################################################
# Go
#####################################################################

[ source.go ]
softTabs = false
tabSize  = 4

#####################################################################
# Markdown
#####################################################################

[ text.html.markdown ]
softTabs   		 = true
tabSize    		 = 4
softWrap   		 = true
spellChecking    = true
spellingLanguage = 'en'
